<Project Sdk="Microsoft.NET.Sdk">

   <PropertyGroup>
      <OutputType>Exe</OutputType>
      <TargetFramework>netcoreapp2.1</TargetFramework>
      <IsPackable>true</IsPackable>
      <PackAsTool>true</PackAsTool>
      <ToolCommandName>update-godaddy-a-record</ToolCommandName>
      <AssemblyName>update-godaddy-a-record</AssemblyName>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Authors>Ivan Gavryliuk (@aloneguid)</Authors>
      <Company>Isoline Ltd.</Company>
      <Product>GoDaddy A record updater</Product>
      <Description>Tool that automates the process of updating A record value on godaddy DNS.</Description>
      <RepositoryUrl>https://github.com/aloneguid/godaddy-record-updater</RepositoryUrl>
      <RepositoryType>GitHub</RepositoryType>
      <PackageTags>GoDaddy DNS</PackageTags>
      <LangVersion>latest</LangVersion>
   </PropertyGroup>

   <ItemGroup>
     <PackageReference Include="Cpf.Core" Version="1.1.52" />
     <PackageReference Include="Refit" Version="4.6.58" />
   </ItemGroup>

</Project>
